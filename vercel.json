{
  "version": 2,
  "buildCommand": "cd grammar-checker && npm install && npm run build",
  "outputDirectory": "grammar-checker/dist",
  "framework": "vite",
  "installCommand": "npm install --force",
  "rewrites": [
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "ignoreCommand": "echo 'Ignoring TypeScript errors for deployment'"
}