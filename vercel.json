{
  "version": 2,
  "builds": [
    {
      "src": "grammar-checker/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "grammar-checker/dist",
        "buildCommand": "sh build.sh"
      }
    }
  ],
  "routes": [
    { "src": "/(.*)", "dest": "/grammar-checker/dist/$1" },
    { "src": "/", "dest": "/grammar-checker/dist/index.html" }
  ]
}