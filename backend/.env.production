# Production Environment Variables
NODE_ENV=production
PORT=3001

# Security
SESSION_SECRET=your-super-secure-session-secret-here
JWT_SECRET=your-super-secure-jwt-secret-here
ENCRYPTION_KEY=your-32-character-encryption-key-here

# Database (if applicable)
# DATABASE_URL=your-production-database-url
# REDIS_URL=your-production-redis-url

# AI Provider URLs (Production)
OLLAMA_URL=http://localhost:11434

# Cloud Provider API Keys (Production - replace with your actual keys)
# OpenAI
OPENAI_API_KEY=your_production_openai_api_key_here

# Anthropic
ANTHROPIC_API_KEY=your_production_anthropic_api_key_here

# Groq
GROQ_API_KEY=your_production_groq_api_key_here

# DeepSeek
DEEPSEEK_API_KEY=your_production_deepseek_api_key_here

# Qwen (Alibaba Cloud)
QWEN_API_KEY=your_production_qwen_api_key_here

# Monitoring and Logging
SENTRY_DSN=your-production-sentry-dsn
LOG_LEVEL=error
ENABLE_LOGGING=true

# CORS Settings
CORS_ORIGIN=https://ai-grammar-web.vercel.app
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AI_RATE_LIMIT_MAX_REQUESTS=10
MODEL_RATE_LIMIT_MAX_REQUESTS=5

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# SSL/TLS (if using HTTPS)
# SSL_KEY_PATH=/path/to/ssl/key.pem
# SSL_CERT_PATH=/path/to/ssl/cert.pem