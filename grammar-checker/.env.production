# Production Environment Variables
VITE_API_URL=https://grammar-checker-api.onrender.com
# Replace the URL above with your actual backend URL after deploying to Render or similar
VITE_APP_NAME=AI Grammar Checker
VITE_APP_VERSION=1.0.0
VITE_ENVIRONMENT=production

# Auth0 Configuration (replace with your production values)
VITE_AUTH0_DOMAIN=your-auth0-domain.auth0.com
VITE_AUTH0_CLIENT_ID=your-production-client-id
VITE_AUTH0_AUDIENCE=your-production-api-audience

# Sentry Configuration (replace with your production values)
VITE_SENTRY_DSN=your-production-sentry-dsn
VITE_SENTRY_ENVIRONMENT=production

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_ERROR_REPORTING=true
VITE_ENABLE_PERFORMANCE_MONITORING=true